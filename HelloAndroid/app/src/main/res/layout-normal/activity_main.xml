<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientshape"
    tools:context="com.example.jonhsmith.helloandroid.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/clouds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/cloud"
                android:scaleX="1"
                android:scaleY="1"
                android:elevation="2dp"/>

            <ImageView
                android:id="@+id/stars"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/start1"
                android:scaleX="1"
                android:scaleY="1"
                android:elevation="2dp"/>

            <ImageView
                android:id="@+id/starss"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/stars2"
                android:scaleX="1"
                android:scaleY="1"
                android:elevation="2dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:elevation="4dp"
                android:src="@drawable/rocket"
                android:id="@+id/imageView" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="#99000000"
                android:elevation="5dp"
                android:id="@+id/relativeLayout">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="6dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:elevation="4dp"
                    android:src="@drawable/logo"/>

                <TextView
                    android:id="@+id/contact_adr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/logo"
                    android:fontFamily="sans-serif"
                    android:text="Udacity, 2465 Latham St, Mountain View, CA 94043"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/logo"
                    android:layout_below="@+id/contact_adr"
                    android:fontFamily="sans-serif"
                    android:text="650-555-5555"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/enroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/contact_phone"
                    android:layout_below="@+id/contact_adr"
                    android:fontFamily="sans-serif"
                    android:text="Enroll now"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
